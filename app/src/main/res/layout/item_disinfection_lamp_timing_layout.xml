<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?android:attr/selectableItemBackground"
        android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_timer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逗比" />

            <TextView
                android:id="@+id/text_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:30"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作日" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_keep_state_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="通电1小时25分"
            android:textSize="18sp" />

        <!--    <ImageView-->
        <!--        android:id="@+id/timer_switch"-->
        <!--        android:background="@drawable/sence_kaiguan_off"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_alignParentEnd="true"-->
        <!--        android:layout_centerVertical="true"-->
        <!--        android:button="@null"-->
        <!--        android:focusable="false"-->
        <!--        android:layout_marginEnd="15dp" />-->
        <Switch
            android:id="@+id/timer_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:thumb="@drawable/ios_thumb_shape"
            android:track="@drawable/ios_back_drawable" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
